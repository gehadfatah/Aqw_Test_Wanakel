<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleMenuTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">#FFFFFF</item>

    </style>


    <style name="DisplayGrayText11sp">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/x</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
