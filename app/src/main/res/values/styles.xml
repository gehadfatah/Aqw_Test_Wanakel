<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleMenuTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">#FFFFFF</item>

    </style>
</resources>
